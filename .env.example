# Kaori Protocol â€” Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# API Authentication
# =============================================================================

# JWT secret key (CHANGE IN PRODUCTION - use a strong random string)
KAORI_JWT_SECRET=your-secure-random-secret-here

# JWT token expiration in minutes (default: 60)
KAORI_JWT_EXPIRE_MINUTES=60

# Comma-separated list of valid API keys for service-to-service auth
KAORI_API_KEYS=key1,key2,key3

# =============================================================================
# Environment
# =============================================================================

# Environment name: development, staging, production
KAORI_ENVIRONMENT=development

# CORS allowed origins (comma-separated, or * for all)
KAORI_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate limiting (requests per minute)
KAORI_RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# Database (Optional - defaults to SQLite)
# =============================================================================

# DATABASE_URL=postgresql://user:pass@localhost:5432/kaori

# =============================================================================
# Cloud Storage (Optional - for evidence files)
# =============================================================================

# GCS_BUCKET=kaori-evidence
# GCS_CREDENTIALS_PATH=/path/to/service-account.json

# =============================================================================
# AI Validators (Optional)
# =============================================================================

# OPENAI_API_KEY=sk-...
# GEMINI_API_KEY=...
